<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFF">
        <Button
            android:id="@+id/btn_groups"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="15dp"
            android:background="@drawable/background_home"
            android:paddingRight="30dp"
            />
        <TextView
            android:id="@+id/txt_groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expedition Groups"
            android:layout_toRightOf="@+id/btn_groups"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/txt_sub_groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View active groups"
            android:layout_below="@+id/txt_groups"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/btn_groups"
            />
</RelativeLayout>